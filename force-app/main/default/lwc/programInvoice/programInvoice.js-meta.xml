<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
	<apiVersion>59.0</apiVersion>
	<isExposed>true</isExposed>
	<masterLabel>Program Invoice</masterLabel>
	<description>Allows for payments of programs within a flow</description>
	<targets>
		<target>lightning__AppPage</target>
		<target>lightning__RecordPage</target>
        <target>lightning__HomePage</target>
		<target>lightning__FlowScreen</target>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
	</targets>
	<targetConfigs>
		<targetConfig targets="lightning__FlowScreen">
			<property name="cartId" type="String" label="Cart Id" required="true" role="inputOnly" />
			<property name="programSessionId" type="String" label="Program Session Id" required="true" role="inputOnly" />
			<property name="contactId" type="String" label="Contact Id" required="true" role="inputOnly" />
		</targetConfig>	
		<targetConfig targets="lightning__AppPage">
			<property name="cartId" type="String" label="Cart Id" />
			<property name="contactId" type="String" label="Contact Id" />
		</targetConfig>	
	</targetConfigs>
</LightningComponentBundle>